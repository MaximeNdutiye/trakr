<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/info_panel_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="12dp"
    android:background="#ffffff">

    <TextView
        android:id="@+id/ip_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No Label"
        android:height="60dp"
        android:elevation="2dp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/secondaryDarkColor"
        android:textSize="18dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:gravity="center_vertical"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">
        <TextView
            android:id="@+id/ip_eta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="Arriving: TOMORROW"
            android:textAllCaps="false"
            android:textColor="@color/primaryTextColor"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/ip_last_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="In Toronto"
            android:textColor="@android:color/primary_text_light"
            android:textSize="14dp" />
        <TextView
            android:id="@+id/ip_track_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="0000-0000-0000-0000"
            android:textColor="@color/secondaryTextColor"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>